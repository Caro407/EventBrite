<%= form_tag charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Amount: <%= @event.price %>€</span>
    </label>
    <%= hidden_field_tag 'event_id', "#{@event.id}"  %>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key="<%= Rails.configuration.stripe[:publishable_key] %>" data-description="<%= @event.title %>" data-amount="<%= @event.price * 100 %>€" data-locale="fr"></script>
<% end %>
