<div class="form-group container">
  <%= form_tag events_path, method: "post" do %>

  <%= label_tag 'Titre' %>
  <%= text_field_tag 'title', @event.title, class: "form-control" %>
  <br/>
  <br/>

  <%= label_tag 'Description' %>
  <%= text_area_tag 'description', @event.description, class: "form-control" %>
  <br/>
  <br/>

  <%= label_tag 'Ville' %>
  <%= text_field_tag 'location', @event.location, class: "form-control" %>
  <br/>
  <br/>

  <%= label_tag "Date de début de l'évènement" %>
  <%= datetime_field_tag 'start_date', @event.start_date, class: "form-control" %>
  <br/>
  <br/>

  <%= label_tag "Durée de l'évènement (en minutes)" %>
  <%= number_field_tag 'duration', @event.duration, class: "form-control" %>
  <br/>
  <br/>


  <%= label_tag 'Tarif par participant' %>
  <%= number_field_tag 'price', @event.price, class: "form-control" %>
  <br/>
  <br/>


  <%= submit_tag "Créer l'évènement", class: "form-control btn btn-info" %>

  <% end %>
</div>
