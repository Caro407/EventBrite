
    <div class="card col-md-3 col-sm-12 px-0 mb-3 ml-2 mr-2">
      <% if event.title.length > 20 %>
      <h3 class="card-header"><%= crop_title(event) %></h3>
      <% else %>
      <h3 class="card-header"><%= event.title %></h3>
      <% end %>
      <div class="card-body">
        <h5 class="card-title"><%= event.start_date.strftime("%d/%m") %></h5>
        <h6 class="card-subtitle text-muted"><%= event.location %></h6>
      </div>
      <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180"
        style="font-size:1.125rem;text-anchor:middle">
        <rect width="100%" height="100%" fill="#868e96" data-darkreader-inline-fill="" style="--darkreader-inline-fill:#585f63;"></rect>
        <text x="50%" y="50%" fill="#dee2e6" dy=".3em" data-darkreader-inline-fill="" style="--darkreader-inline-fill:#d6d2cd;">Image cap</text>
      </svg>
      <div class="card-body">
        <% if event.description.length > 100 %>
        <p class="card-text"><%= crop_description(event) %></p>
        <% elsif event.description.length < 100 %>
        <p class="card-text"><%= extend_description(event) %></p>
        <% else %>
        <p class="card-text"><%= event.description %></p>
        <% end %>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= event.price %>€</li>
      </ul>
      <div class="card-body d-flex flex-row justify-content-center flex-wrap">
        <%= link_to "Voir l'évènement", event_path(id: event.id), class: "card-link btn btn-primary" %>
      </div>
    </div>
